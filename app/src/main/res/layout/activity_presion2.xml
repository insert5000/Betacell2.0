<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Press"
    android:orientation="vertical"
    android:background="#000f29">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRO DE PRESION ARTERIAL"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Llene todos los campos"
            android:textColor="#BFBDBD"
            android:layout_marginHorizontal="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fomulario"
        android:paddingVertical="40dp">
    <TextView
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tex_presion"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"
        android:textColor="#000000"
        android:textColorHint="#ffffff"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        android:layout_marginHorizontal="30dp"
        />
    <EditText
        android:id="@+id/regitroPresion_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="85dp"
        android:layout_marginBottom="20dp"
        android:inputType="numberDecimal"
        android:hint="5-180                 mmHg"
        android:textColor="#000f29"
        android:textColorHint="#000f29"
        android:background="@drawable/in_formularios"
        android:layout_marginHorizontal="30dp"

        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:text="@string/text_presion2"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        android:layout_marginHorizontal="30dp"
        />

    <EditText
        android:id="@+id/pulsos_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif"
        android:hint="Pulsos por minuto"
        android:inputType="numberDecimal"
        android:textColor="#000f29"
        android:textColorHint="#000f29"
        android:background="@drawable/in_formularios"/>

    <Button
        android:id="@+id/guardar_Presion"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_forma"
        android:elevation="5dp"
        android:text="GUARDAR"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>