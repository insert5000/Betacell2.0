<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Glucosa"
    android:orientation="vertical"
    android:background="#000f29"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="REGISTRO DE GLUCOSA"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:textStyle="bold"
    />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llene todos los campos"
            android:textColor="#BFBDBD"
            android:layout_marginHorizontal="30dp"
            />

    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@drawable/fomulario"

       android:paddingVertical="40dp">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tex_glucosa"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="16dp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/mol"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:inputType="numberDecimal"
        android:textColorHint="#000f29"
        android:hint="2-30"
        android:paddingHorizontal="30dp"
        android:textColor="#000f29"
        android:background="@drawable/in_formularios"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:text="@string/text_glucosa2"
        android:textSize="16dp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Spinner
        android:id="@+id/sppiner"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/sppiner_style"

        />



    <Button
        android:id="@+id/guardar_glucosa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_forma"
        android:elevation="5dp"
        android:text="GUARDAR"
        android:fontFamily="sans-serif"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />
   </LinearLayout>
</LinearLayout>